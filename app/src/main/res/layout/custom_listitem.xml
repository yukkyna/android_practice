<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listitem_thumbnail"
        android:contentDescription="@string/thumbnail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listitem_title"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listitem_thumbnail"
        android:contentDescription="@string/listitem_title" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="yukkyna.itunesearcher.WebImageView"
        android:id="@+id/listitem_webthumb"
        android:layout_below="@+id/listitem_title"
        android:layout_alignParentStart="true" />
</RelativeLayout>